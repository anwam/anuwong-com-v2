---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "@fontsource/ibm-plex-sans";
import "@fontsource/inter";
import "@fontsource/kanit";
import "@fontsource/sarabun";

interface Props {
  title: string;
  description: string;
  imageUrl?: string;
}

const { title, description, imageUrl } = Astro.props;
---

<!doctype html>
<html lang="th">
  <head>
    <BaseHead title={title} description={description} imageUrl={imageUrl} />
    <slot name="head" />
  </head>
  <body class="bg-stone-300">
    <Header transition:persist />
    <slot />
    <Footer transition:persist />
    <slot name="scripts" />

    <!-- Google Tag Manager -->
    <script
      is:global
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-W4ZZRMVS89"></script>
    <script is:global type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-W4ZZRMVS89");
    </script>
  </body>
</html>
