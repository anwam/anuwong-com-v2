---
import FormattedDate from "@/components/FormattedDate.astro";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = {
  isFirst?: boolean;
  post: CollectionEntry<"blog">;
};
const { isFirst, post } = Astro.props;
---

<li
  class:list={[
    "bg-gray-50 hover:bg-gray-100",
    "jusitfy-center",
    "items-center",
    "shadow shadow-gray-400",
    "p-2 md:p-4",
    "rounded-2xl",
    "w-full max-w-full",
    "h-full max-h-48",
    "hover:shadow-lg transition-all",
    { "col-span-12": isFirst },
    { "col-span-12 md:col-span-6": !isFirst },
  ]}
>
  <a
    class="relative flex flex-row items-center w-full h-full max-w-full max-h-full gap-x-4"
    href={`/blog/${post.slug}/`}
  >
    {
      post.data.preview && (
        <Image
          src={post.data.preview}
          width={isFirst ? 128 : 72}
          height={isFirst ? 128 : 72}
          class:list={[
            {
              "md:w-[128px] md:h-[128px]": isFirst,
            },
          ]}
          class="w-[72px] h-[72px]  border rounded-lg aspect-square object-contain bg-white"
          loading={isFirst ? "eager" : "lazy"}
          alt={`${post.slug} preview`}
        />
      )
    }
    <article class="relative self-start w-3/4 h-auto max-w-full max-h-full">
      <h4 class="font-bold text-gray-800">
        {post.data.title}
      </h4>
      <FormattedDate date={post.data.date} />
      <p class="text-sm text-gray-700 md:text-base line-clamp-2">
        {post.data.description}
      </p>
      <ul class="flex flex-row flex-wrap mt-2 text-xs gap-x-1 gap-y-1">
        {
          post.data.tags &&
            post.data.tags
              .slice(0, 3)
              .map((tag) => (
                <li class="px-2 py-1 rounded-full text-gray-100 bg-gray-600">
                  {tag}
                </li>
              ))
        }
      </ul>
    </article>
  </a>
</li>
