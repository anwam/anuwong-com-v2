---
import { Image } from "astro:assets";
import ProfileImage from "@/assets/images/profile.jpg";
---

<h2 class="sr-only">Profile</h2>
<section class="">
  <div class="w-full flex flex-col md:flex-row md:gap-x-4 gap-y-2 items-center">
    <Image
      src={ProfileImage}
      width={128 * 2}
      height={128 * 2}
      class="w-32 h-32 rounded-full"
      alt="Anuwong Mongkudkornburee"
    />
    <section class="bg-gray-100 p-2 rounded w-full">
      <p class="md:text-lg text-sm font-sans mb-2 font-bold">
        Anuwong (Bill) Mongkudkornburee
      </p>
      <p class="font-sans text-sm text-gray-600">
        Software Engineer at
        <a
          class="text-cyan-600 underline font-bold"
          target="_blank"
          href="https://www.kbtg.tech">KBTG</a
        >
      </p>
      <p class="text-sm text-gray-700 text-pretty">
        Fullstack developer proficient in Nodejs, React, and Golang
      </p>
      <h3 class="sr-only">Contact</h3>
      <div class="flex gap-x-2 items-center mt-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
          ></path>
        </svg>
        <p class="">dev.anuwong@gmail.com</p>
      </div>
    </section>
  </div>
</section>
