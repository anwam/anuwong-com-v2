---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

type Props = {
  title: string;
  content: any;
  thumbnail: ImageMetadata;
  url?: string;
};

const { title, content, thumbnail, url } = Astro.props;
---

<h3 class="mb-4 text-lg font-bold">
  <a href={url} class="underline">{title}</a>
</h3>
<Image
  src={thumbnail}
  alt={title}
  class="object-cover object-top w-full h-64 rounded-lg shadow"
/>
<p class="mt-2 whitespace-pre-line text-stone-500">{content}</p>
