---
interface Props {
  date: Date;
  class?: string;
}

const { date, class: className } = Astro.props;
---

<time
  class="text-gray-400"
  class:list={[className, "text-xs"]}
  datetime={date.toISOString()}
>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
