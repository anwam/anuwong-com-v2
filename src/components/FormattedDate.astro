---
interface Props {
  date: Date;
  class?: string;
}

const { date, class: className } = Astro.props;
---

<time class:list={[className, "text-sm"]} datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
