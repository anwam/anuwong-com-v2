  >
    <h1 class="sr-only">{SITE_TITLE}</h1>
    <header>
      <Profile />
    </header>

    <BlogSection posts={posts} />

    <h2 class="text-xl font-bold text-gray-800">Hobbies</h2>
    <ul class="grid grid-flow-row grid-cols-12 gap-4">
      {
        hobbies.map((hobby) => (
          <li class="col-span-4 flex flex-col items-center justify-center rounded-lg bg-gray-100 p-4 hover:shadow hover:shadow-gray-300">
            {hobby.split(" ").map((h) => (
              <span>{h}</span>
            ))}
          </li>
        ))
      }
    </ul>
  </main>
</BaseLayout>
