---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import BaseLayout from "../layouts/BaseLayout.astro";

const title = `Home | ${SITE_TITLE}`;

const hobbies = [
  "📖 Reading",
  "🎧 Music",
  "🧑🏽‍💻 Coding",
  "🎮 PlayStation",
  "📸 Photography",
  "🐈 Cat",
];

const projects: Array<string> = [];
---

<BaseLayout title={title} description={SITE_DESCRIPTION}>
  <main
    class="container px-2 md:px-0 flex flex-col lg:max-w-4xl gap-4 mx-auto mt-4"
  >
    <h1 class="text-xl font-bold text-stone-800">{SITE_TITLE}</h1>
    <p class="text-stone-600">{SITE_DESCRIPTION}</p>

    <section class="p-4 shadow rounded-xl bg-stone-100 shadow-stone-600">
      <h2 class="text-xl font-bold text-stone-800">Profile</h2>
      <p>Anuwong Mongkudkornburee (Bill)</p>
      <p>He/Him | Cat | Golang | ReactJS | NextJS | Tailwind CSS</p>
      <p>True Digital Group, Bangkok, Thailand</p>
      <h3 class="font-bold text-stone-700">Contact</h3>
      <p>dev.anuwong@gmail.com</p>
    </section>

    <h2 class="text-xl font-bold text-stone-800">Projects</h2>
    <ul>
      {
        projects.length > 0 ? (
          projects.map((project) => <li>{project}</li>)
        ) : (
          <li class="p-4 shadow rounded-xl bg-stone-100 shadow-stone-600">
            Coming soon.
          </li>
        )
      }
    </ul>

    <h2 class="text-xl font-bold text-stone-800">Hobbies</h2>
    <ul class="grid grid-flow-row grid-cols-12 gap-4">
      {
        hobbies.map((hobby) => (
          <li class="flex flex-col items-center justify-center col-span-4 p-4 shadow rounded-xl bg-stone-100 shadow-stone-600">
            {hobby.split(" ").map((h) => (
              <span>{h}</span>
            ))}
          </li>
        ))
      }
    </ul>
  </main>
</BaseLayout>
